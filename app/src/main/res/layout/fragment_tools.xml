<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MiPerfilFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="173dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/side_nav_bar">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imagen_perfil_ajustes"
                android:layout_width="181dp"
                android:layout_height="115dp"

                android:layout_centerInParent="true"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_nombre_ususario_ajustes"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Nombre"
            android:textAlignment="center"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editText_nombre_usuario_ajustes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text=""
            android:textAlignment="center"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_email_usuario_ajustes"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:text="Correo"
            android:textAlignment="center"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editText_email_usuario_ajustes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text=""
            android:textAlignment="center"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_password_usuario_ajustes"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:text="ContraseÃ±a"
            android:textAlignment="center"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editText_password_ususario_ajustes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="**************"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_guardar_ajustes"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/rounded_button_solid"
            android:text="Guardar Cambios"
            android:textAlignment="center"
            android:textColor="@color/sweet_dialog_bg_color_dark" />

    </LinearLayout>
</FrameLayout>